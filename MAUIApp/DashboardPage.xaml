                    </StackLayout>
                </Frame>
                
                <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#34a853" CornerRadius="15" Padding="20" HasShadow="True">
                    <StackLayout>
                        <Label Text="ðŸ“¦ Orders" FontSize="16" FontAttributes="Bold" TextColor="White" />
                        <Label Text="{Binding Orders}" FontSize="28" FontAttributes="Bold" TextColor="White" />
                    </StackLayout>
                </Frame>
                
                <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#ea4335" CornerRadius="15" Padding="20" HasShadow="True">
                    <StackLayout>
                        <Label Text="ðŸ’° Revenue" FontSize="16" FontAttributes="Bold" TextColor="White" />
                        <Label Text="{Binding Revenue, StringFormat='${0:N0}'}" FontSize="28" FontAttributes="Bold" TextColor="White" />
                    </StackLayout>
                </Frame>
                
                <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#fbbc04" CornerRadius="15" Padding="20" HasShadow="True">
                    <StackLayout>
                        <Label Text="ðŸ›ï¸ Products" FontSize="16" FontAttributes="Bold" TextColor="White" />
