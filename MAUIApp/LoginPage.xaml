<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIApp.LoginPage"

             BackgroundColor="#f0f2f5">
    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="40,80,40,40" VerticalOptions="Start">
            
            <Frame BackgroundColor="White" CornerRadius="20" Padding="40" HasShadow="True">
                <VerticalStackLayout Spacing="25">
                    
                    <Label Text="ðŸ”" FontSize="60" HorizontalOptions="Center" />
                    <Label Text="Welcome Back" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333" />
                    <Label Text="Please sign in to continue" FontSize="16" HorizontalOptions="Center" TextColor="#666" />
                    
                    <Frame BackgroundColor="#f8f9fa" CornerRadius="10" Padding="0" HasShadow="False">
                        <Entry x:Name="EmailEntry" Placeholder="ðŸ“§ Email" Keyboard="Email" BackgroundColor="Transparent" />
                    </Frame>
                    <Label x:Name="EmailError" TextColor="Red" IsVisible="False" FontSize="12" />
                    
                    <Frame BackgroundColor="#f8f9fa" CornerRadius="10" Padding="0" HasShadow="False">
                        <Entry x:Name="PasswordEntry" Placeholder="ðŸ”’ Password" IsPassword="True" BackgroundColor="Transparent" />
                    </Frame>
                    <Label x:Name="PasswordError" TextColor="Red" IsVisible="False" FontSize="12" />
                    
                    <Button x:Name="LoginBtn" Text="Sign In" Clicked="OnLoginClicked" 
                            BackgroundColor="#007bff" TextColor="White" 
                            CornerRadius="10" HeightRequest="50" FontSize="16" FontAttributes="Bold" />
                    
                    <Label Text="Don't have an account? Register" HorizontalOptions="Center" TextColor="#007bff" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>